@model IndexViewModel
@{
    ViewData["Title"] = "Настройки учетной записи";
}
<br />
<p class="text-success">@ViewData["StatusMessage"]</p>
<br />

<div>
    <h4>Настройки учетной записи</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Пароль:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Изменить</a>
            }
            else
            {
                <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Задать</a>
            }
        </dd>
       
        <dt>Телефон:</dt>
        <dd>

            @(Model.PhoneNumber ?? "Не указан")
                @if (Model.PhoneNumber != null)
                {
                    <br />
                    <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Сменить</a>
                    <form asp-controller="Manage" asp-action="RemovePhoneNumber" method="post">
                        [<button type="submit" class="btn-link">Убрать</button>]
                    </form>
                }
                else
                {
                    <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Добавить</a>
                }
        </dd>

       
    </dl>
</div>
